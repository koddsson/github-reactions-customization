{
  "manifest_version": 2,
  "name": "GitHub Reaction Customizer",
  "version": "1.0",
  "browser_action": {
    "default_title": "Github Reaction Customizer",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "tabs", "http://*/", "https://*/", "activeTab", "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}